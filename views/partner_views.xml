<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Localizamos el campo 'email' y agregamos el checkbox debajo -->
            <xpath expr="//field[@name='email']" position="after">
                <!-- Usamos un grupo para garantizar la alineaciÃ³n vertical -->
                <group>
                    <!-- AÃ±adimos el checkbox con su texto explicativo -->
                    <field name="x_is_a_client"/>
                    <label for="x_is_a_client" string="Marque si este contacto ha sido cliente en el pasado."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
