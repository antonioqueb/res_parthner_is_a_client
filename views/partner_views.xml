            <xpath expr="//field[@name='email']" position="after">
                <!-- Usamos un div para garantizar la alineaciÃ³n vertical -->
                <div>
                    <!-- AÃ±adimos el checkbox debajo del campo email -->
                    <field name="x_is_a_client"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
